{% extends "../base.njk" %}

{% block pageBody %}
    <h1>Overview of uploads</h1>

    <p>There are {{ viewModel.tableRows | length }} uploads.</p>

    <table>
        <tr>
            {% for heading in viewModel.tableHeadings %}
                <th scope="column">{{ heading }}</th>
            {% endfor %}
        </tr>

        {% for row in viewModel.tableRows %}
            <tr>
                {% for item in row %}
                    <td>
                        {% if item.type == 'text' %}
                            {{ item.text }}
                        {% elif item.type == 'link' %}
                            <a href="{{ item.href }}">{{ item.text }}</a>
                        {% endif %}
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}
