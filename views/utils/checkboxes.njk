{% macro checkboxes(viewModel) %}
    <fieldset>
        {% for checkbox in viewModel.checkboxes %}
            <div>
                <label for="{{viewModel.idPrefix}}-{{loop.index}}">{{checkbox.label}}</label>
                {% if checkbox.checked %}
                    {% set checked=" checked" %}
                {% endif %}
                {# autocomplete="off" is for Firefox to stop it persisting userâ€™s choice #}
                <input id="{{viewModel.idPrefix}}-{{loop.index}}" type="checkbox" name="{{viewModel.name}}" value="{{checkbox.value}}" autocomplete="off"{{checked}}>
            </div>
        {% endfor %}
    </fieldset>
{% endmacro %}
